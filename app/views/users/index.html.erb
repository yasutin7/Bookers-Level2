<div class='col-xs-3'>
  <%= render partial: 'show',locals: {user: @user} %>
  <%= render partial: 'books/new',locals: {book: @book} %>
</div>
<div class='col-xs-9'>
    <h2>Users</h2>

    <table class='table'>
      <thead>
        <tr>
          <th>image</th>
          <th>name</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
          <% @users.each do |user| %>
          <tr>
             <%if user.profile_image == nil %>
               <td> <a href="users/<%=user.id%>"><%= image_tag 'noimage.jpg', :size => '40x40' %></a></td>
            <%else%>
               <td><a href="users/<%=user.id%>"><%= image_tag attachment_url(user, :profile_image, :fill, 40, 40, format: "jpg") %></a></td>
            <%end%>
            <td><%= user.name %></td>
            <td><%= link_to "Show", user_path(user)%></td>
          </tr>
          <%end%>
      </tbody>
    </table>

</div>
