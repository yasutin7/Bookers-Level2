<div class='col-xs-3'>
  <%= render partial: 'users/show',locals: {user: current_user}%>
  <%= render partial: 'new' %>
</div>
<div class='col-xs-9'>
    <h2>Books</h2>

    <table class='table'>
      <thead>
        <tr>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
          <% @books.each do |book| %>
          <tr>
             <%if book.user.profile_image == nil %>
               <td> <%= link_to image_tag('noimage.jpg', :size => '40x40'), user_path(book.user.id) %></td>
             <%else%>
               <td><%=link_to image_tag(attachment_url(book.user, :profile_image, :fill, 40, 40, format: "jpg")), user_path(book.user.id) %> </td>
             <%end%>
            <td><%= link_to book.title, book_path(book.id) %></td>
            <td><%= book.body%></td>
          </tr>
        <%end%>
      </tbody>
    </table>

</div>
