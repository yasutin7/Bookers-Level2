<h2> New book </h2>
<%= form_with  model: @book do |f| %>
  <label>Title</label>
  <div class="field row ">
    <%= f.text_field :title , class:"col-xs-12"%>
  </div>
  <label>Opinion</label>
  <div class="field row ">
    <%= f.text_area :body ,class:"col-xs-12" %>
  </div>
  <div class= "actions row ">
    <%= f.submit value="Create Book" , class:"btn btn-primary col-xs-12"%>
  </div>
<% end %>
